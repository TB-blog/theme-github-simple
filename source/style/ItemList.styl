.repos-view
  padding-top 4px

.empty-item
  padding 15px 30px
  line-height 2em
  a
    color #3eaf7c
  code
    border-radius 2px
    border 1px dotted #666
    color #d4d5d6
    padding .25rem .5rem
    margin 0
    font-size .85em
    background-color rgba(27,31,35,.05)
    border-radius 3px

.btn-page
  margin 0 10px
  width 100px
  text-align center
  line-height 30px
  height 30px
  display inline-block
  max-width 170px
  border 2px solid #c3c2c9
  color #686868
  border-radius 5px
  font-size 14px
  background #fff
  overflow hidden
  text-decoration none

.list-nav, .list
  border-radius 2px

.list-nav
  padding 15px 30px
  text-align center

.list
  margin 30px 0
  width 100%
  transition all .5s cubic-bezier(.55,0,.1,1)
  ul
    list-style-type none
    padding 0
    margin 0

.slide-left-enter, .slide-right-leave-to
  opacity 0
  transform translate(30px, 0)

.slide-left-leave-to, .slide-right-enter
  opacity 0
  transform translate(-30px, 0)

.item-move, .item-enter-active, .item-leave-active
  transition all .5s cubic-bezier(.55,0,.1,1)

.item-enter
  opacity 0
  transform translate(30px, 0)

.item-leave-active
  position absolute
  opacity 0
  transform translate(30px, 0)

@media (max-width 600px)
  .bio
    blockquote
      font-size 14px

  .list
    margin 10px 0
